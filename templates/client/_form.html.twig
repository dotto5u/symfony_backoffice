<div class="my-20 lg:my-40 lg:ml-64 px-4">
    <div class="w-full max-w-4xl mx-auto bg-white shadow-md rounded-lg p-6">
        <h1 class="mb-6 text-center text-xl font-semibold text-gray-700">
            {{ isEdit ? 'client.edit'|trans : 'client.add'|trans }}
        </h1>

        {{ form_start(form) }}
            <div class="mb-4">
                {{ form_label(form.firstname, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-600 mb-2'}}) }}
                {{ form_widget(form.firstname, {'attr': {'class': 'w-full p-2 border rounded-lg focus:outline-none focus:ring focus:ring-blue-200'}}) }}
                <div class="text-sm text-red-500 mt-1">
                    {{ form_errors(form.firstname) }}
                </div>
            </div>

            <div class="mb-4">
                {{ form_label(form.lastname, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-600 mb-2'}}) }}
                {{ form_widget(form.lastname, {'attr': {'class': 'w-full p-2 border rounded-lg focus:outline-none focus:ring focus:ring-blue-200'}}) }}
                <div class="text-sm text-red-500 mt-1">
                    {{ form_errors(form.lastname) }}
                </div>
            </div>

            <div class="mb-4">
                {{ form_label(form.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-600 mb-2'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'w-full p-2 border rounded-lg focus:outline-none focus:ring focus:ring-blue-200'}}) }}
                <div class="text-sm text-red-500 mt-1">
                    {{ form_errors(form.email) }}
                </div>
            </div>

            <div class="mb-4">
                {{ form_label(form.phoneNumber, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-600 mb-2'}}) }}
                {{ form_widget(form.phoneNumber, {'attr': {'class': 'w-full p-2 border rounded-lg focus:outline-none focus:ring focus:ring-blue-200'}}) }}
                <div class="text-sm text-red-500 mt-1">
                    {{ form_errors(form.phoneNumber) }}
                </div>
            </div>

            <div class="mb-4">
                {{ form_label(form.address, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-600 mb-2'}}) }}
                {{ form_widget(form.address, {'attr': {'class': 'w-full p-2 border rounded-lg focus:outline-none focus:ring focus:ring-blue-200'}}) }}
                <div class="text-sm text-red-500 mt-1">
                    {{ form_errors(form.address) }}
                </div>
            </div>

            <div class="flex flex-wrap gap-3 text-center">
                {{ form_widget(form.submit, {'attr': {'class': 'bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 focus:ring focus:ring-blue-200'}}) }}

                {% if isEdit %}
                    <a href="{{ path('app_client_delete', {'id': client.id}) }}" class="bg-red-600 text-white py-2 px-4 rounded-lg hover:bg-red-700 focus:ring focus:ring-red-200">
                        {{ 'delete'|trans }}
                    </a>
                {% endif %}

                <a href="{{ path('app_client_index') }}" class="bg-gray-500 text-white py-2 px-4 rounded-lg hover:bg-gray-600 focus:ring focus:ring-gray-200">
                    {{ 'back'|trans }}
                </a>
            </div>
        {{ form_end(form) }}
    </div>
</div>