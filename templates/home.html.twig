{% extends 'base.html.twig' %}

{% block title %}{{ 'nav.home'|trans }}{% endblock %}

{% block nav %}
    {% include 'partials/_sidebar.html.twig' %}
{% endblock %}

{% block main %}
     <div class="my-20 lg:my-40 lg:ml-64 px-4">
        <div class="w-full max-w-4xl mx-auto bg-white shadow-md rounded-lg p-6">
            <h1 class="text-3xl font-semibold text-gray-700 mb-4">{{ 'home.title'|trans }}</h1>

            <p class="text-gray-600 mb-10">{{ 'home.description'|trans }}</p>

            <a href="{{ app.user ? path('app_product_index') : path('app_login') }}" class="bg-blue-600 text-white p-3 rounded-lg hover:bg-blue-700">
                {{ 'login.submit'|trans }}
            </a>
        </div>
    </div>
{% endblock %}