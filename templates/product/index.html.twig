{% extends 'base.html.twig' %}

{% block title %}{{ 'nav.products'|trans }}{% endblock %}

{% block nav %}
    {% include 'partials/_sidebar.html.twig' %}
{% endblock %}

{% block main %}
    <div class="my-20 lg:my-40 lg:ml-64 px-4">
        <div class="w-full max-w-4xl mx-auto bg-white shadow-md rounded-lg p-6">
            <h1 class="text-2xl font-semibold text-gray-700 mb-6">{{ 'product.list'|trans }}</h1>

            <div class="overflow-x-auto">
                <table class="w-full table-auto border-collapse border border-gray-200">
                    <thead>
                        <tr class="bg-gray-100 text-left text-sm text-gray-600">
                            <th class="p-4 border border-gray-200">{{ 'product.name'|trans }}</th>
                            <th class="p-4 border border-gray-200">{{ 'product.price'|trans }}</th>
                            <th class="p-4 border border-gray-200">{{ 'actions'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        {% for product in products %}
                            <tr class="text-sm text-gray-700 hover:bg-gray-50">
                                <td class="p-4">{{ product.name }}</td>
                                <td class="p-4">{{ product.price|number_format(0, ' ', ' ') }} â‚¬</td>
                                <td class="flex flex-wrap justify-center gap-2 p-4 md:justify-start">
                                    <a href="{{ path('app_product_show', { 'id': product.id }) }}" class="text-blue-600 hover:underline">{{ 'show'|trans }}</a>
                                    <a href="{{ path('app_product_edit', { 'id': product.id }) }}" class="text-blue-600 hover:underline ml-2">{{ 'edit'|trans }}</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" class="p-4 text-center text-gray-500">{{ 'no_records_found'|trans }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="mt-6">
                <a href="{{ path('app_product_new') }}" class="bg-blue-600 text-white p-3 rounded-lg hover:bg-blue-700">
                    {{ 'new'|trans }}
                </a>
            </div>
        </div>
    </div>
{% endblock %}