<div class="my-20 lg:my-40 lg:ml-64 px-4">
    <div class="w-full max-w-4xl mx-auto bg-white shadow-md rounded-lg p-6">
        <h1 class="mb-6 text-center text-xl font-semibold text-gray-700">
            {{ isEdit ? 'product.edit'|trans : 'product.add'|trans }}
        </h1>

        {{ form_start(form) }}
            <div class="mb-4">
                {{ form_label(form.name, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-600 mb-2'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'w-full p-2 border rounded-lg focus:outline-none focus:ring focus:ring-blue-200'}}) }}
                <div class="text-sm text-red-500 mt-1">
                    {{ form_errors(form.name) }}
                </div>
            </div>

            <div class="mb-4">
                {{ form_label(form.description, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-600 mb-2'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'w-full p-2  border rounded-lg focus:outline-none focus:ring focus:ring-blue-200 resize-none overflow-wrap break-words'}}) }}
                <div class="text-sm text-red-500 mt-1">
                    {{ form_errors(form.description) }}
                </div>
            </div>

            <div class="mb-4">
                {{ form_label(form.price, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-600 mb-2'}}) }}
                {{ form_widget(form.price, {'attr': {'class': 'w-full p-2 border rounded-lg focus:outline-none focus:ring focus:ring-blue-200'}}) }}
                <div class="text-sm text-red-500 mt-1">
                    {{ form_errors(form.price) }}
                </div>
            </div>

            <div class="flex flex-wrap gap-3 text-center">
                {{ form_widget(form.submit, {'attr': {'class': 'bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 focus:ring focus:ring-blue-200'}}) }}

                {% if isEdit %}
                    <a href="{{ path('app_product_delete', {'id': product.id}) }}" class="bg-red-600 text-white py-2 px-4 rounded-lg hover:bg-red-700 focus:ring focus:ring-red-200">
                        {{ 'delete'|trans }}
                    </a>
                {% endif %}

                <a href="{{ path('app_product_index') }}" class="bg-gray-500 text-white py-2 px-4 rounded-lg hover:bg-gray-600 focus:ring focus:ring-gray-200">
                    {{ 'back'|trans }}
                </a>
            </div>
        {{ form_end(form) }}
    </div>
</div>